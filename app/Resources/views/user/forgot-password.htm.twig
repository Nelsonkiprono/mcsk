{% extends 'base.htm.twig' %}

{% block title %}Reset Password{% endblock %}
{% block pageTitle %}<h2>Reset Password</h2>{% endblock %}
{% block body %}


    <div id="sp-page-builder" class="sp-page-builder  page-1">

        <div class="page-content">
            <section class="sppb-section welcome-wrapper" style="padding:0px">
                <div class="sppb-container">
                    <div class="sppb-row">
                        <div class="sppb-col-sm-6" style=";width:600px;">
                            <div class="sppb-addon-container sppb-wow zoomIn sppb-animated"
                                 style="visibility: visible; animation-duration: 800ms; animation-delay: 300ms; animation-name: zoomIn;"
                                 data-sppb-wow-duration="800ms" data-sppb-wow-delay="300ms">
                                <div class="sppb-addon sppb-addon-text-block sppb-text-left "><h6
                                            class="sppb-addon-title" style="font-size:14px;line-height:14px;">Change Account Password</h6>

                                        <div class="sppb-addon-content">
                                            <p>To change your account password, fill in the form below with your email and we will send you a password reset email.</p>

                                            {% if error %}
                                                <div class="alert alert-danger">{{ error }}</div>
                                            {% endif %}

                                            {% if success %}
                                                <div class="alert alert-success">{{ success }}</div>
                                            {% endif %}

                                            {{ form_start(passwordResetForm) }}
                                            <div class="md-form-group float-label" style="margin-bottom: 10px">
                                                {{ form_row(passwordResetForm.email,{'attr':{'class':'inputbox'}}) }}

                                            </div>
                                            <div class="md-form-group float-label">
                                                <button type="submit" class="btn primary">Send Email</button>
                                            </div>

                                            {{ form_end(passwordResetForm) }}

                                        </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
{% endblock body %}

