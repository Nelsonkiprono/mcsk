<script type="text/javascript">
    $(document).ready(function() {
        $('#expiry_date').hide();
        $('#signature').hide();
        
         if ($('#role').val()  == 'Committee' || $('#role').val()  == 'Committee Chair'){
            $('#expiry_date').show();
        }

        if ($('#role').val()  == 'Board'){
            $('#signature').show();
        }
        $('#role').on('change', function() {
            if(this.value == 'Committee' || this.value == 'Committee Chair'){
                $('#expiry_date').show();
            }else{
                $('#expiry_date').hide();
            }

            if(this.value == 'Board'){
                $('#signature').show();
            }else{
                $('#signature').hide();
            }
        });
